mixin nav-group(data, options)
  .nav-group(class=attributes.class)
    h4.nav-group-title= data.title
    ul.nav-group-list
      each item in data.list
        - var itemClasses = []
        if item.isActive
          - itemClasses.push('nav-item--active')
        li.nav-item(class=itemClasses)
          a(href= item.link).nav-link= item.title
